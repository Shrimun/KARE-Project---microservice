# Copy this file to .env and fill in the secret values before starting the application

# OpenAI API Key (required)
OPENAI_API_KEY=your_openai_api_key_here

# MongoDB Configuration (required)
MONGODB_URI=mongodb://mongodb:27017
MONGODB_DATABASE=kare_qa_db

# JWT Configuration (required - generate a secure random string)
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=your_jwt_secret_key_here_use_openssl_rand_hex_32
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_HOURS=24

# Optional settings
# CHUNK_SIZE=800
# CHUNK_OVERLAP=200
# EMBED_BATCH_SIZE=64
# DOCS_PATH=./documents